<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.splash_screen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayoutSplash"
        android:background="#80d8ff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvSplash"
        android:text="@string/my_note"
        style="@style/BaseTextView"
        app:layout_constraintEnd_toEndOf="@id/imgSplash"
        app:layout_constraintStart_toStartOf="@id/imgSplash"
        app:layout_constraintBottom_toTopOf="@id/imgSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imgSplash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/note"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.3"
        android:layout_height="0dp"
        android:layout_width="0dp"
        tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>